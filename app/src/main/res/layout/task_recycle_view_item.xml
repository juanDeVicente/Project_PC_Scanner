<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutTaskItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:animateLayoutChanges="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/dividerVerticalTask2"
        app:layout_constraintEnd_toStartOf="@+id/dividerVerticalTask2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dividerVerticalTask2">

        <ImageView
            android:id="@+id/imageViewTaskIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:contentDescription="@string/icon_image"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo_foreground" />

        <TextView
            android:id="@+id/textViewTaskDescriptionGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textViewTaskNameGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1.96"
            android:ellipsize="end"
            android:singleLine="true" />

    </LinearLayout>

    <View
        android:id="@+id/dividerVerticalTask2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/dividerHorixontalTaskGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/dividerHorixontalTaskGroup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:animateLayoutChanges="true"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/dividerVerticalTask2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dividerVerticalTask2"
        app:layout_constraintTop_toTopOf="@+id/dividerVerticalTask2">

        <TextView
            android:id="@+id/textViewTaskPIDGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewTaskUserGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewTaskMemoryGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
